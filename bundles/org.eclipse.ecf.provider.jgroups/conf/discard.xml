<!--
Discards 10% of all outgoing packets
Author: Bela Ban
Version: $Id: discard.xml,v 1.1 2009/10/29 14:21:29 phperret Exp $
 -->
<config>
    <UDP 
         mcast_port="45566" 
         mcast_addr="228.8.8.8"
         tos="16"
         ucast_recv_buf_size="20000000"
         ucast_send_buf_size="640000"
         mcast_recv_buf_size="25000000" 
         mcast_send_buf_size="640000" 
         loopback="false" 
         max_bundle_size="64000" 
         max_bundle_timeout="30"
         ip_ttl="2"
         enable_bundling="true"/>
    <DISCARD down="0.1"/>
    <PING timeout="3000"
          num_initial_members="3"
          num_ping_requests="10"/>
    <MERGE2 max_interval="10000"
        min_interval="5000"/>
    <FD_SOCK/>
    <pbcast.NAKACK use_mcast_xmit="false" gc_lag="50" 
                   retransmit_timeout="20,300,600,1200,2400,4800"
                   discard_delivered_msgs="true"/>
    <UNICAST timeout="300,600,1200,2400,3600"/>
    <pbcast.STABLE stability_delay="1000" desired_avg_gossip="50000" 
                   max_bytes="500000"/>
    <pbcast.GMS print_local_addr="true" join_timeout="3000" 
                />
    <FC max_credits="2000000"
        min_threshold="0.20"/>
    <FRAG2 frag_size="60000"  />
</config>